<Window x:Class="WpfApplication1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Package Client Login" Height="156" Width="306.4">
    <Grid Margin="0,0,0,-1">
        <TextBox x:Name="textBoxIPAddress" HorizontalAlignment="Left" Height="23" Margin="101,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Text="127.0.0.1"/>
        <Label HorizontalContentAlignment="Right" Content="IP Address" HorizontalAlignment="Left" Height="23" Margin="20,7,0,0" VerticalAlignment="Top" Width="81"/>
        <TextBox x:Name="textBoxUserName" HorizontalAlignment="Left" Height="23" Margin="101,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" Text="admin" TextChanged="textBoxUserName_TextChanged" />
        <Label HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="23" Margin="20,35,0,0" VerticalAlignment="Top" Width="81" Content="User Name&#xD;&#xA;"/>
        <PasswordBox x:Name="textBoxPassword" HorizontalAlignment="Left" Height="23" Margin="101,63,0,0" VerticalAlignment="Top" Width="171" />
        <Label HorizontalContentAlignment="Right" Content="Password" HorizontalAlignment="Left" Height="23" Margin="20,63,0,0" VerticalAlignment="Top"  Width="81"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="23" Margin="101,91,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click"/>
    </Grid>
</Window>